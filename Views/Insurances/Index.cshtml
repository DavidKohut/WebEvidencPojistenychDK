@model IEnumerable<WebEvidencPojistenychDK.Models.Insurance>

@{
	ViewData["Title"] = "Správa pojištění";
}


<div class="col-7">
	<div class="mt-5">
		<a asp-action="Create">
			<input type="button" value="Přidat pojištění" class="btn btn-primary" />
		</a>
	</div>
	<table class="table mt-3 ">
		<thead>
			<tr>
				<th class="col-2">
					Jméno
				</th>
				<th class="col-2">
					Příjmení
				</th>
				<th class="col-2">
					Druh pojištění
				</th>
				<th class="col-4">
					Pojistná částka
				</th>
				<th>

				</th>
			</tr>
		</thead>
		<tbody >
			@foreach (var item in Model)
			{
				<tr>
					<td>
						@Html.DisplayFor(modelItem => item.InsuredPerson.FirstName) 
					</td>
					<td>
						 @Html.DisplayFor(modelItem => item.InsuredPerson.Surname)
					</td>
					<td>
						@Html.DisplayFor(modelItem => item.Type)
					</td>
					<td>
						@Html.DisplayFor(modelItem => item.Value)
					</td>
					<td>
						<div>
							<a  asp-action="Details" asp-route-id="@item.Id">
								<input type="submit" value="Detail" class="btn btn-info" />
							</a>
						
						</div>


					</td>
				</tr>
			}
		</tbody>
	</table>
</div>