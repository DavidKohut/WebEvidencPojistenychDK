@model WebEvidencPojistenychDK.Models.InsuredPerson

@{
    ViewData["Title"] = "Upravit pojištěnce";
}

<div class="col-9">
    <div class="mt-5">
        <h5>Pojištěnec: @Html.DisplayFor(model => model.FirstName) @Html.DisplayFor(model => model.Surname) </h5>
        <hr />
    </div>
    <div class="row col-6">
        <div >
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />
                <div class="form-group mt-3 col-3">
                    <label asp-for="FirstName" class="control-label"><strong>Jméno</strong></label>
                    <input asp-for="FirstName" class="form-control" />
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>
                <div class="form-group mt-3 col-4">
                    <label asp-for="Surname" class="control-label"><strong>Příjmení</strong></label>
                    <input asp-for="Surname" class="form-control" />
                    <span asp-validation-for="Surname" class="text-danger"></span>
                </div>
                <div class="form-group mt-3 col-2">
                    <label asp-for="Age" class="control-label"><strong>Věk</strong></label>
                    <input asp-for="Age" class="form-control" />
                    <span asp-validation-for="Age" class="text-danger"></span>
                </div>
                <div class="form-group mt-3 col-6">
                    <label asp-for="Email" class="control-label"><strong>E-mail</strong></label>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group mt-3 col-3">
                    <label asp-for="PhoneNumber" class="control-label"><strong>Telefonní číslo</strong></label>
                    <input asp-for="PhoneNumber" class="form-control" />
                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                </div>
                <div class="form-group mt-3 col-4">
                    <label asp-for="Street" class="control-label"><strong>Ulice</strong></label>
                    <input asp-for="Street" class="form-control" />
                    <span asp-validation-for="Street" class="text-danger"></span>
                </div>
                <div class="form-group mt-3 col-4">
                    <label asp-for="City" class="control-label"><strong>Město</strong></label>
                    <input asp-for="City" class="form-control" />
                    <span asp-validation-for="City" class="text-danger"></span>
                </div>
                <div class="form-group mt-3 col-2">
                    <label asp-for="PostalCode" class="control-label "><strong>PSČ</strong></label>
                    <input asp-for="PostalCode" class="form-control " />
                    <span asp-validation-for="PostalCode" class="text-danger"></span>
                </div>
                <div >
                    <div>
                        <dl class="btn-group mt-3">
                            <dt>
                                <input type="submit" value="Uložit" class="btn btn-primary" />
                            </dt>
                            <dd>
                                <a asp-action="Details" asp-controller="InsuredPersons" asp-route-id="@Model.Id">
                                    <input type="button" value="Zpět" class="btn btn-secondary " />
                                </a>
                            </dd>
                        </dl>
                    </div>
                
                </div>
            </form>
        </div>
    </div>
</div>
